---
interface FishIndexItem {
  id: string;
  nombre_comun: string;
}

const { fishes } = Astro.props as {
  fishes: FishIndexItem[];
};

const BASE = import.meta.env.BASE_URL;
---



<section class="fish-index">
  <h2>√çndice de especies</h2>

  <ul class="index-list">
    {fishes.map((fish, i) => (
      <li class="index-item">
        <a href={`${BASE}page/${i + 1}/`} data-astro-reload>
          <span class="index-name">
            {fish.nombre_comun}
          </span>

          <span class="index-dots"></span>

          <span class="index-page">
            {i + 1}
          </span>
        </a>
      </li>
    ))}
  </ul>
</section>
<style>
  .fish-index {
    padding: 1.5rem;
  }

  .index-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .index-item {
    margin: 0.4rem 0;
  }

  .index-item a {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    text-decoration: none;
    color: inherit;
    font-weight: 500;
  }

  .index-name {
    white-space: nowrap;
  }

  .index-dots {
    flex: 1;
    border-bottom: 1px dotted currentColor;
    opacity: 0.5;
    transform: translateY(-2px);
  }

  .index-page {
    white-space: nowrap;
    font-weight: 600;
  }

</style>